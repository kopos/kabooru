<td id="left">
</td>
<td id="center">

  <h1>Articles</h1>

  <ul class="link-list">
    <% for article in @articles %>
      <li>
        <a href="articles/<%=h article.id %>"><h2 class="link-url"><%=h article.title %></h2></a>
          <%= link_to 'Edit', edit_article_path(article.id) %> | 
          <%= link_to 'Delete', article, :confirm => 'Are you sure?', :method => :delete %>
        <p class="link-shortdesc">Created by <%= article.user.name %> on <%= article.created_at %> </p>
        <p class="link-longdesc"><%= article.content[0..400] %>...<%= link_to 'More', article %></p>
        <p class="link-tagcloud"> <span style="color:gray">Tags:</span>
          <% unless article.tags.nil? %>    
            <% for tag in article.tags  %>
              <a href="tags/<%=h tag.id%>/"><%=h tag.name %></a>, 
            <% end %>
          <% end %>
        </p>
      </li>
      <% end %>
  </ul>
</td>
<td id="right">
  <div class="vt"><div class="b"><div class="l"><div class="r"><div class="bl"><div class="br"><div class="tl"><div class="tr">   
    <div class="docket">
      <h3>Meta</h3>
      <ul class="list">
        <li><%= link_to 'New article', new_article_path %></li>
        <li><a href="http://127.0.0.1:3000/#">Export as PDF</a></li>
        <li><a href="http://127.0.0.1:3000/#">Export as DOC</a></li>
        <li><a href="http://127.0.0.1:3000/#">Download</a></li>
      </ul>
    </div>
  </div></div></div></div></div></div></div></div>

</td>
