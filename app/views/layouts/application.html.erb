<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
  <title> Kabooru : <%=h controller.action_name %></title>
  <%= stylesheet_link_tag 'vcard' %>
  <%= stylesheet_link_tag 'docket' %>
  <%= stylesheet_link_tag 'kabooru' %>
</head>
<body>
<table id="layout" border=0 cellspacing=0 cellpadding=0>
 <tbody>
  <tr>
    <td align=right id="header" valign="top" colspan=3>
      <% if logged_in? %>
        You are logged in as <i><%=h current_user.name %></i> |
        <%= link_to 'Home', home_path %> | 
        <a href="#">Settings</a> | 
        <%= link_to 'Logout', logout_path %>
      <% else %>
        You are not logged in.
        <%= link_to 'Login', login_path %>
      <% end %>     
    </td>
  </tr>
  <tr>
    <td id="page-menu" colspan=3 align="right">
      <% if logged_in? %>
        <%= link_to 'Articles',    :controller => 'articles',  :action => 'index' %> &nbsp;|&nbsp;      
        <%= link_to 'Documents',   :controller => 'documents', :action => 'index' %> &nbsp;|&nbsp;
        <%= link_to 'Links',       :controller => 'links',     :action => 'index' %> &nbsp;|&nbsp;
        <%= link_to 'Yellow Pages',:controller => 'users',     :action => 'index' %>
      <% else %>
        <%= link_to 'About', about_path %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td align="center" colspan=3>
      <% unless flash[:notice].nil? %>
        <p class="flash"><%= flash[:notice] %></p>
      <% end %>
    </td>
  </tr>
  <tr id="page-content">
    <%= yield %>
  </tr>
  <tr>
    <td id="footer" align="center" colspan=3>
    All rights reserved. // 2006 - 2008 // &copy; Spinaxys Solutions
    </td>
  </tr>
 </tbody>
</table>
</body>
</html>

