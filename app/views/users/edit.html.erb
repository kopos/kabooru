<td id="left"></td>
<td id="center">
  <h1>Editing user</h1>

  <%= error_messages_for :user %>

  <% form_for(@user) do |f| %>
    <p>
      <b>Email</b><br />
      <%= f.text_field :email_id %>
    </p>

    <p>
      <b>Name</b><br />
      <%= f.text_field :name %>
    </p>

    <p>
      <b>First name</b><br />
      <%= f.text_field :first_name %>
    </p>

    <p>
      <b>Last name</b><br />
      <%= f.text_field :last_name %>
    </p>

    <p>
      <b>Telephone</b><br />
      <%= f.text_field :telephone %>
    </p>

    <p>
      <b>Job title</b><br />
      <%= f.text_field :job_title %>
    </p>

    <p>
      <b>Gmail</b><br />
      <%= f.text_field :gmail_id %>
    </p>

    <p>
      <b>Yahoo</b><br />
      <%= f.text_field :yahoo_id %>
    </p>

    <p>
      <b>Skype</b><br />
      <%= f.text_field :skype_id %>
    </p>

    <p>
      <%= f.submit "Update" %>
    </p>
  <% end %>

  <%= link_to 'Show', @user %> |
  <%= link_to 'Back', users_path %>
</td>
<td id="right"></td>