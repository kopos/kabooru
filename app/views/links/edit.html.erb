<td id="left"></td>
<td id="center">
  <h1>Editing link</h1>

  <%= error_messages_for :link %>

  <% form_for(@link) do |f| %>
    <p>
      <b>Url</b><br />
      <%= f.text_field :url %>
    </p>

    <p>
      <b>Title</b><br />
      <%= f.text_field :title %>
    </p>

    <p>
      <b>Short desc</b><br />
      <%= f.text_field :short_desc %>
    </p>

    <p>
      <b>Notes</b><br />
      <%= f.text_area :notes %>
    </p>

    <p>
      <%= f.submit "Update" %>
    </p>
  <% end %>

</td>
<td id="right">
  <div class="vt"><div class="b"><div class="l"><div class="r"><div class="bl"><div class="br"><div class="tl"><div class="tr">   
    <div class="docket">
      <h3>Meta</h3>
      <ul class="list">
        <li><a href="http://127.0.0.1:3000/articles/edit/1">Export as PDF</a></li>
        <li><a href="http://127.0.0.1:3000/articles/edit/1">Export as DOC</a></li>
        <li><a href="http://127.0.0.1:3000/articles/edit/1">Download</a></li>
      </ul>
    </div>
  </div></div></div></div></div></div></div></div>

  <div class="vt"><div class="b"><div class="l"><div class="r"><div class="bl"><div class="br"><div class="tl"><div class="tr">   
    <div class="docket">
      <h3>Actions</h3>
      <ul class="list">
        <li><%= link_to 'Show', @link %></li>
        <li><%= link_to 'Destroy', @link, :confirm => 'Are you sure?', :method => :delete %></li>
      </ul>
    </div>
  </div></div></div></div></div></div></div></div>

  <div class="vt"><div class="b"><div class="l"><div class="r"><div class="bl"><div class="br"><div class="tl"><div class="tr">   
    <div class="docket">
      <h3>Tags</h3>
        <p>
        <% for tag in @link.tags %>
        <a href="tags/<%=h tag.id %>"><%=h tag.name %></a> 
          <% end %>         
        </p>
    </div>
  </div></div></div></div></div></div></div></div>
</td>