<td id="left"></td>
<td id="center">
    <h2><%=h @link.url %></h2>
  <p>
    <b>Title:</b>
    <%=h @link.title %>
  </p>

  <p>
    <b>Short desc:</b>
    <%=h @link.short_desc %>
  </p>

  <p>
    <b>Notes:</b>
    <%=h @link.notes %>
  </p>
</td>
<td id="right">
  <div class="vt"><div class="b"><div class="l"><div class="r"><div class="bl"><div class="br"><div class="tl"><div class="tr">   
    <div class="docket">
      <h3>Meta</h3>
      <ul class="list">
        <li><a href="http://127.0.0.1:3000/articles/edit/1">Export as PDF</a></li>
        <li><a href="http://127.0.0.1:3000/articles/edit/1">Export as DOC</a></li>
        <li><a href="http://127.0.0.1:3000/articles/edit/1">Download</a></li>
      </ul>
    </div>
  </div></div></div></div></div></div></div></div>

  <div class="vt"><div class="b"><div class="l"><div class="r"><div class="bl"><div class="br"><div class="tl"><div class="tr">   
    <div class="docket">
      <h3>Actions</h3>
      <ul class="list">
        <li><%= link_to 'Edit', edit_link_path(@link) %></li>
        <li><%= link_to 'Destroy', @link, :confirm => 'Are you sure?', :method => :delete %></li>
      </ul>
    </div>
  </div></div></div></div></div></div></div></div>

  <div class="vt"><div class="b"><div class="l"><div class="r"><div class="bl"><div class="br"><div class="tl"><div class="tr">   
    <div class="docket">
      <h3>Tags</h3>
        <p> Tags: 
        <% for tag in @link.tags %>
        <a href="tags/<%=h tag.id %>"><%=h tag.name %></a> 
          <% end %>         
        </p>
    </div>
  </div></div></div></div></div></div></div></div>

</td>
